#:kivy 1.0.9

<RemoteControl>:

    acc: acc_slider
    acc_progress: acc_progress
    pitch: pitch_slider
    pitch_progress: pitch_progress
    term: term_input
    start_btn: start
    connect_btn: connect
    reset_btn: reset
    clear_btn: clear
    stop_btn: stop
    kp_text: kp
    ki_text: ki
    kd_text: kd
    set_pid_btn: set_pid

    GridLayout:
        rows: 4
        cols: 1 
        width: root.width
        height: root.height - 20

        GridLayout:
            rows: 5
            cols: 2
            padding: 10
            spacing: 10
            
            Slider:
                id: acc_slider
                orientation: "horizontal"
                max: 1000
                min: -1000
                value: 0
                
            Label:
                id: acc_progress
                text: "Aceleration: 1000 microseconds"

            Slider:
                id: pitch_slider
                orientation: "horizontal"
                max: 45
                min: -45
                value: 0

            Label:
                id: pitch_progress
                text: "Emulate Pitch: 0"

            Button:
                id: stop
                text: "Stop!"

            GridLayout:
                rows: 2
                cols: 2
                padding: 10
                spacing: 10

                Button:
                    id: start
                    text: "Start!"

                Button:
                    id: connect
                    text: "Connect"

                Button:
                    id: reset
                    text: "Reset"

                Button:
                    id: clear
                    text: "Clear"

        GridLayout:
            cols: 4
            rows: 1
            padding: 10
            spacing: 10
            size_hint_y: 0.25

            TextInput:
                id: kp
                text: "10"

            TextInput:
                id: ki
                text: "1"

            TextInput:
                id: kd
                text: "3"

            Button:
                id: set_pid
                text: "Set PID"


        TextInput:
            id: term_input
            text: "<Not connected>"
        
