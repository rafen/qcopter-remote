#:kivy 1.0.9

<RemoteControl>:

    acc: acc_slider
    acc_progress: acc_progress
    term: term_input
    start_btn: start
    connect_btn: connect
    reset_btn: reset
    clear_btn: clear
    stop_btn: stop

    GridLayout:
        rows: 2
        cols: 1 
        width: root.width
        height: root.height - 20

        GridLayout:
            rows: 4
            cols: 2
            padding: 10
            spacing: 10
            
            Slider:
                id: acc_slider
                orientation: "horizontal"
                max: 100
                min: 0
                value: 0
                
            ProgressBar:
                id: acc_progress
                max: 100
                min: 0
                value: 0

            Button:
                id: stop
                text: "Stop!"

            GridLayout:
                rows: 2
                cols: 2
                padding: 10
                spacing: 10

                Button:
                    id: start
                    text: "Start!"

                Button:
                    id: connect
                    text: "Connect"

                Button:
                    id: reset
                    text: "Reset"

                Button:
                    id: clear
                    text: "Clear"

        TextInput:
            id: term_input
            text: "<Not connected>"
        
